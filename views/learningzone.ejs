			document.getElementById('video').src = "//remixportal.s3.amazonaws.com/video/masterChan1fin2.mp4";
			$('#materials').html("");
		}; 
		//comments section list element clicked
		document.getElementById('vidComments').onclick = function () {
			document.getElementById('video').src = '//remixportal.s3.amazonaws.com/video/commentsFinished2.mp4';
			$('#materials').html("");
		}; 
